<!doctype html>
<html lang="ko">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="/css/bootstrap.css" rel="stylesheet">
  <link href="/css/layout.css" rel="stylesheet">
  <link href="/css/yshop.css" rel="stylesheet">

  <title>와이숍 스마트스토어센터</title>
</head>

<body>
  <div class="pc" id="layout">
    <!-- Header -->
    <header>
      <div class="header">
        <!-- left -->
        <a class="header-brand" href="/sellers/<%= store %>/dashboard">
          <img src="/images/no-img.jpg" width="30" height="24">
          스마트스토어센터
        </a>
        <!-- right -->
        <ul>
          <li>
            <a href="#">
              <span class="login-id">
                <%= id %>
              </span>
              님
              <span class="my-info">
                내정보</span>
            </a>
          </li>
          <li><a href="/sellers/logout">로그아웃</a></li>
        </ul>
      </div>
    </header>

    <!-- Sidebar -->
    <aside>
      <div class="sidebar">
        <div class="store">
          <a href="/customer/<%= store %>">
            <img src="<%= storeImg %>" class="img-circle" width="68" height="68">
            <span class="shop">
              <%= shop %>
            </span>
          </a>
        </div>
        <nav>
          <ul class="metisMenu" id="accordion">
            <li>
              <a data-bs-toggle="collapse" href="#collapse1" aria-expanded="false">상품관리</a>
              <ul class="submenu collapse" id="collapse1" data-bs-parent="#accordion">
                <li><a href="/sellers/<%= store %>/products/list">상품 조회/수정</a></li>
                <li><a href="/sellers/<%= store %>/products/register">상품 등록</a></li>
                <li><a href="/sellers/<%= store %>/products/category">카테고리 관리</a></li>
              </ul>
            </li>
            <li>
              <a data-bs-toggle="collapse" href="#collapse2" aria-expanded="false">판매관리</a>
              <ul class="submenu collapse" id="collapse2" data-bs-parent="#accordion">
                <li><a href="#">주문통합검색</a></li>
                <li><a href="#">구매확정 내역</a></li>
                <li><a href="#">취소 관리</a></li>
              </ul>
            </li>
            <li>
              <a data-bs-toggle="collapse" href="#collapse3" aria-expanded="false">정산관리</a>
              <ul class="submenu collapse" id="collapse3" data-bs-parent="#accordion">
                <li><a href="#">정산 내역</a></li>
                <li><a href="#">충전금 관리</a></li>
              </ul>
            </li>
            <li>
              <a data-bs-toggle="collapse" href="#collapse4" aria-expanded="false">문의/리뷰관리</a>
              <ul class="submenu collapse" id="collapse4" data-bs-parent="#accordion">
                <li><a href="#">문의 관리</a></li>
                <li><a href="#">리뷰 관리</a></li>
                <li><a href="#">리뷰이벤트 관리</a></li>
              </ul>
            </li>
            <li>
              <a data-bs-toggle="collapse" href="#collapse5" aria-expanded="false">스토어전시관리</a>
              <ul class="submenu collapse" id="collapse5" data-bs-parent="#accordion">
                <li><a href="#">스마트스토어 (PC)</a></li>
                <li><a href="#">스토어 관리</a></li>
              </ul>
            </li>
            <li>
              <a data-bs-toggle="collapse" href="#collapse6" aria-expanded="false">고객혜택관리</a>
              <ul class="submenu collapse" id="collapse6" data-bs-parent="#accordion">
                <li><a href="/sellers/<%= store %>/benefits/register">혜택 등록</a></li>
                <li><a href="/sellers/<%= store %>/benefits/list">혜택 조회/수정</a></li>
                <li><a href="#">고객등급 관리</a></li>
                <li><a href="#">포인트 지급내역 조회</a></li>
              </ul>
            </li>
            <li>
              <a data-bs-toggle="collapse" href="#collapse7" aria-expanded="false">통계</a>
              <ul class="submenu collapse" id="collapse7" data-bs-parent="#accordion">
                <li><a href="#">요약</a></li>
                <li><a href="#">분석</a></li>
                <li><a href="#">통계</a></li>
              </ul>
            </li>
            <li>
              <a data-bs-toggle="collapse" href="#collapse8" aria-expanded="false">판매자정보</a>
              <ul class="submenu collapse" id="collapse8" data-bs-parent="#accordion">
                <li><a href="#">판매자 정보</a></li>
                <li><a href="#">사업자 전환</a></li>
              </ul>
            </li>
            <li>
              <a data-bs-toggle="collapse" href="#collapse9" aria-expanded="false">공지사항</a>
              <ul class="submenu collapse" id="collapse9" data-bs-parent="#accordion">
                <li><a href="#">공지사항</a></li>
              </ul>
            </li>
          </ul>
        </nav>
      </div>
    </aside>

    <!-- Content -->
    <main>
      <!-- 상품 조회/수정 -->
      <header>
        <div class="content-header">
          상품 조회/수정
        </div>
      </header>
      <div class="content">
        <!-- 요약 -->
        <div class="panel">
          <div class="panel-body">
            <div class="item">
              <div class="item-content">
                <ul class="seller-status-list">
                  <!-- 전체 -->
                  <li>
                    <span class="status-icon">
                      <i class="seller-icon icon-all"></i>
                    </span>
                    <div class="status-text">
                      <p>전체</p>
                      <strong>
                        <%= status.all %>
                      </strong><em>건</em>
                    </div>
                  </li>
                  <!-- 판매중 -->
                  <li>
                    <span class="status-icon">
                      <i class="seller-icon icon-sale"></i>
                    </span>
                    <div class="status-text">
                      <p>판매중</p>
                      <strong>
                        <%= status.sale %>
                      </strong><em>건</em>
                    </div>
                  </li>
                  <!-- 품절 -->
                  <li>
                    <span class="status-icon">
                      <i class="seller-icon icon-outofstock"></i>
                    </span>
                    <div class="status-text">
                      <p>품절</p>
                      <strong>
                        <%= status.outofstock %>
                      </strong><em>건</em>
                    </div>
                  </li>
                  <!-- 판매중지 -->
                  <li>
                    <span class="status-icon">
                      <i class="seller-icon icon-suspension"></i>
                    </span>
                    <div class="status-text">
                      <p>판매중지</p>
                      <strong>
                        <%= status.suspension %>
                      </strong><em>건</em>
                    </div>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <!-- 필터 -->
        <div class="panel">
          <div class="panel-body">
            <div class="sub-form">
              <!-- 검색어 -->
              <div class="item">
                <label class="item-label">검색어</label>
                <div class="item-content">

                </div>
              </div>
              <!-- 판매상태 -->
              <div class="item">
                <label class="item-label">판매상태</label>
                <div class="item-content">
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                    <label class="form-check-label" for="inlineCheckbox1">전체</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2" checked>
                    <label class="form-check-label" for="inlineCheckbox2">판매중</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
                    <label class="form-check-label" for="inlineCheckbox3">품절</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox4" value="option4">
                    <label class="form-check-label" for="inlineCheckbox4">판매중지</label>
                  </div>
                </div>
              </div>
              <!-- 카테고리 -->
              <div class="item">
                <label class="item-label">카테고리</label>
                <div class="item-content">
                  <div class="category-select-list">
                    <div class="category-select-list-item">
                      <select class="form-select" style="width: 206px; height: 34px;">
                        <option>대분류</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                      </select>
                    </div>
                    <div class="category-select-list-item">
                      <select class="form-select" style="width: 206px; height: 34px;">
                        <option>중분류</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                      </select>
                    </div>
                    <div class="category-select-list-item">
                      <select class="form-select" style="width: 206px; height: 34px;">
                        <option>소분류</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                      </select>
                    </div>
                  </div>
                </div>
              </div>
              <!-- 기간 -->
              <div class="item">
                <label class="item-label">기간</label>
                <div class="item-content">

                </div>
              </div>
            </div>
          </div>
          <div class="panel-footer">
            <button type="button" class="btn btn-primary">검색</button>
          </div>
        </div>
        <!-- 상품목록 -->
        <div class="panel">
          <div class="panel-header">
            상품목록 (총 <span class="text-primary">
              <%= productList.length %>
            </span>개)
          </div>
          <div class="panel-body">
            <div class="item">
              <div class="item-content">
                <table id="product-list" style="width: 100%;">
                  <colgroup>
                    <col style="width: 40px;">
                    <col style="width: 60px;">
                    <col style="width: 200px;">
                    <col style="width: 100px;">
                    <col style="width: 90px;">
                    <col style="width: 110px;">
                    <col style="width: 100px;">
                    <col style="width: 100px;">
                    <col style="width: 100px;">
                    <col style="width: 100px;">
                    <col style="width: 180px;">
                  </colgroup>
                  <thead>
                    <tr>
                      <th>삭제</th>
                      <th>수정</th>
                      <th>상품명</th>
                      <th>판매상태</th>
                      <th>재고수량</th>
                      <th>판매가</th>
                      <th>옵션</th>
                      <th>대분류</th>
                      <th>중분류</th>
                      <th>소분류</th>
                      <th>상품등록일</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for (let i=0; i < productList.length; i++) { %>
                      <tr>
                        <td><a class="btn btn-primary"
                            href="/sellers/<%= store %>/products/list_delete?product=<%= productList[i].productPk %>">삭제</a>
                        </td>
                        <td><a class="btn btn-primary" href="#">수정</a></td>
                        <td>
                          <%= productList[i].name %>
                        </td>
                        <td>
                          <%= productList[i].status %>
                        </td>
                        <td>
                          <%= productList[i].stock %>
                        </td>
                        <td>
                          <%= productList[i].price %>
                        </td>
                        <td>
                          <%= productList[i].option %>
                        </td>
                        <td>
                          <%= productList[i].groupName1 %>
                        </td>
                        <td>
                          <%= productList[i].groupName2 %>
                        </td>
                        <td>
                          <%= productList[i].groupName3 %>
                        </td>
                        <td>
                          <%= productList[i].registrationDate %>
                        </td>
                      </tr>
                      <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer>
      <div class="footer">

      </div>
    </footer>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
    crossorigin="anonymous"></script>
  <script src="/js/yshop.js"></script>
</body>

</html>